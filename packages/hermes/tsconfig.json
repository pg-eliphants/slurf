{
  "compilerOptions": {
    "allowUnreachableCode": true,
    "baseUrl": ".",
    "declaration": true,
    "experimentalDecorators": true,
    "jsx": "react",
    "lib": [
      "es6",
      "dom",
      "esnext.asynciterable"
    ],
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "paths": {
      "~adaptors/*": [
        "src/lib/adaptors/*"
      ],
      "~adpators": [
        "src/lib/adaptors/index.ts"
      ],
      "~graphql/*": [
        "src/lib/graphql/*"
      ],
      "~hermes-props": [
        "src/lib/hermes/interfaces/properties/index.ts"
      ],
      "~hermes/*": [
        "src/lib/hermes/interfaces/*",
        "src/lib/hermes/interfaces/properties/*",
        "src/lib/hermes/*"
      ],
      "~lib/*": [
        "src/lib/*"
      ],
      "~properties/*": [
        "src/lib/adaptors/interfaces/properties/*",
        "src/lib/hermes/interfaces/properties/*"
      ],
      "~states/*": [
        "src/lib/adaptors/interfaces/states/*"
      ],
      "~system": [
        "src/lib/system/index.ts"
      ],
      "~templates": [
        "src/lib/adaptors/interfaces/templates/index.ts"
      ],
      "~templates/*": [
        "src/lib/adaptors/interfaces/templates/*"
      ],
      "~tokens": [
        "src/lib/adaptors/interfaces/tokens/index.ts"
      ],
      "~tokens/*": [
        "src/lib/adaptors/interfaces/tokens/*"
      ],
      "~users": [
        "src/lib/adaptors/interfaces/users/index.ts"
      ],
      "~users/*": [
        "src/lib/adaptors/interfaces/users/*"
      ],
      "~utils": [
        "src/lib/utils/index.ts"
      ]
    },
    "rootDir": "./",
    "sourceMap": true,
    "strict": true,
    "target": "es2017"
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "test/**/*.ts",
    "test/**/*.tsx"
  ]
}
